@page
@model Restaurant.Pages.Admin.MenuItemPages.MenuItemIndexModel

@if(TempData["success"] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.success('@TempData["success"]');
    </script>
}

<div class="container p-3">
    <div class="row">
        <div class="col-6">
            <h1>Menu Items</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-page="Upsert" class="btn btn-primary"><i class="bi bi-plus-square"></i> &nbsp;Add Menu Item</a>
        </div>
    </div>

    <br />
    <br />

    <table id="DT_load" class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Price
                </th>
                <th>
                    Category
                </th>
                <th>
                    Food Type
                </th>
            </tr>
        </thead>
        
    </table>
</div>

@section Scripts {
    <script src="~/js/menuItem.js"></script>
}