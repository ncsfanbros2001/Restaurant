@page
@model Restaurant.Pages.Admin.CategoryPages.CategoryIndexModel

@if(TempData["success"] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.success('@TempData["success"]');
    </script>
}

<div class="container p-3">
    <div class="row">
        <div class="col-6">
            <h1>Categories</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-page="CreateCategory" class="btn btn-primary"><i class="bi bi-plus-square"></i> &nbsp;Add Category</a>
        </div>
    </div>

    <br />
    <br />

    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Display Order
                </th>
                <th>
                    Manipulate Data
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var category in Model.Category)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="EditCategory" asp-route-id="@category.Id" class="btn btn-warning mx-2">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-page="DeleteCategory" asp-route-id="@category.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>